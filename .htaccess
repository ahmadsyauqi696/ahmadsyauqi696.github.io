RewriteEngine On
RewriteBase /seavida/

# ============================
# 1. Atur home.php jadi halaman utama
# ============================
RewriteRule ^$ index.php [L]

# ============================
# 2. Routing untuk halaman lain
#    /products  → product.php
#    /gallery   → gallery.php
#    /news      → news.php
# ============================
RewriteRule ^products$ product.php [L]
RewriteRule ^gallery$ gallery.php [L]
RewriteRule ^news$ news.php [L]

# ============================
# 3. Sembunyikan ekstensi .php
# ============================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)$ $1.php [L]
